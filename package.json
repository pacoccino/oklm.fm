{
  "name": "oklm-default",
  "version": "1.0.0",
  "description": "oklm web radio",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server/server.js",
    "postinstall": "npm run build",
    "build": "grunt build",
    "service-crawler:start": "node scripts/startCrawler.js",
    "service-crawler:stop": "forever stop server/services/crawler.js",
    "service-api:start": "node scripts/startApi.js",
    "service-api:stop": "forever stop server/services/api.js",
    "service-static:start": "node scripts/startStatic.js",
    "service-static:stop": "forever stop server/services/static.js",
    "services-start": "npm run service-crawler:start && npm run service-api:start && npm run service-static:start",
    "services-stop": "npm run service-static:stop && npm run service-api:stop && npm run service-crawler:stop",
    "clean:logs": "rm -Rf log/Crawler/** && rm -Rf log/Api/** && rm -Rf log/Static/** && rm -Rf log/Dev/**",
    "deploy-nginx-config": "npm run _nginx-clean-config && npm run _nginx-copy-config && npm run _nginx-symbolic-link && npm run _nginx-restart",
    "_nginx-copy-config": "sudo cp config/etc/nginx/nginx.conf /etc/nginx/nginx.conf && sudo cp -R  config/etc/nginx/conf.d/ /etc/nginx && sudo cp -R  config/etc/nginx/sites-available/ /etc/nginx",
    "_nginx-symbolic-link": "sudo ln -s /etc/nginx/sites-available/api.oklm.fm.conf /etc/nginx/sites-enabled/api.oklm.fm.conf && sudo ln -s /etc/nginx/sites-available/static.oklm.fm.conf /etc/nginx/sites-enabled/static.oklm.fm.conf",
    "_nginx-clean-config": "sudo rm -rf /etc/nginx/confi.d/api.oklm.fm-upstream.conf /etc/nginx/sites-available/api.oklm.fm.conf /etc/nginx/sites-enabled/api.oklm.fm.conf /etc/nginx/confi.d/static.oklm.fm-upstream.conf /etc/nginx/sites-available/static.oklm.fm.conf /etc/nginx/sites-enabled/static.oklm.fm.conf",
    "_nginx-restart": "sudo service nginx restart"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://5169959@git.dc0.gpaas.net/default.git"
  },
  "engines": {
    "node": "~4.2.2"
  },
  "author": "pakokrew",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.14.2",
    "cookie-parser": "^1.4.0",
    "express": "^4.13.3",
    "express-session": "^1.12.1",
    "forever": "^0.15.1",
    "grunt": "^0.4.5",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-copy": "^0.8.2",
    "grunt-contrib-less": "^1.1.0",
    "grunt-contrib-uglify": "^0.11.0",
    "grunt-contrib-watch": "^0.6.1",
    "load-grunt-tasks": "^3.4.0",
    "mkdirp": "^0.5.1",
    "request": "^2.67.0",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.4.3",
    "winston": "^2.1.1"
  },
  "devDependencies": {}
}
